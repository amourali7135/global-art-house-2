<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= cl_image_tag @order.art.photos.first.photo, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>ART</strong> <%= @order.art.title %> [<%= @order.art_sku %>]</li>
        <li><strong>ARTIST</strong> <%= @order.art.artist.first_name %> <%= @order.art.artist.last_name %><% if @order.art.artist.artist_name?%>, also known as <%= @order.art.artist.artist_name %></li>
        <% end %>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>If your purchase is approved by the artist, the estimated delivery will be within <strong>2 weeks.</strong></p>
    </div>
  </div>
</div>
