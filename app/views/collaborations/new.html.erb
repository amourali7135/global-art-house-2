<div class="row align-items-center justify-content-center">
   <div class="col-sm-8">
     <div class="">
       <img src="" alt="" class="img-fluid">
     </div>
     <div class="col card p-4 m-4 bg-light">
       <h2>Post a request for a collaboration.  You never know who will respond!</h2>
       <%= simple_form_for [@artist, @collaboration] do |f|%>
       <%= f.input :title %>
       <%= f.input :description, label: "Describe the type of collaboration that you're seeking out." %>
       <%= f.input :goal, label: "What do you hope to obtain from the collaboration if anything?" %>
       <%= f.input :tag_list, collection: Collaboration.media, input_html: {multiple: true, id: "collaboration_new_tags"}, label: "Does this article have anything to do with a medium of creation?  If so, tag it." %>
       <%= f.input :tag_list, collection: Collaboration.styles, input_html: {multiple: true, id: "collaboration_new_styles"}, label: "What about a style of it?" %>
       <%= f.input :photo_cache, as: :hidden %>
       <%= f.input :photo, as: :file %>
       <%= f.button :submit, 'Submit', class: 'btn btn-primary'%>
       </div>
       <% end %>
     </div>
   </div>
 </div>

