<div class="row align-items-center justify-content-center">
   <div class="col-sm-8">
     <div class="">
       <img src="" alt="" class="img-fluid">
     </div>
     <div class="col card p-4 m-4 bg-light">
       <h2>Create a new lesson or class to teach to the world.</h2>
       <%= simple_form_for [@artist, @lesson] do |f|%>
       <%= f.input :title %>
       <%= f.input :description, label: "Describe the lesson/class that you're offering." %>
       <%= f.input :subdescription, label: "Place a one-liner to describe your lesson/class." %>
       <%= f.input :learnings, label: "Put a list or a summary of what your students will learn by the time the course is finished." %>
       <%= f.input :prerequisites, label: "Are there any pre-requisites that your students should have?" %>
       <%= f.input :free, as: :radio_buttons, label: "Is your offering for free?" %>
       <%= f.input :price_cents, label: "How much will you charge per student if the course isn't free?" %>
       <%= f.input :tag_list, collection: Lesson.media, input_html: {multiple: true, id: "lesson_new_tags"}, label: "Does this lesson have anything to do with a certain medium of creation?  If so, tag it." %>
       <%= f.input :tag_list, collection: Lesson.styles, input_html: {multiple: true, id: "lesson_new_styles"}, label: "What about any style of it?" %>
       <%= f.input :photo_cache, as: :hidden %>
       <%= f.input :photo, as: :file %>
       <%= f.button :submit, 'Submit', class: 'btn btn-primary'%>
       </div>
       <% end %>
     </div>
   </div>
 </div>

