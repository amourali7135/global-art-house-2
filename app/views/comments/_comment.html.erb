<div class="card">
  <div class="card-body">
  <% if comment.user.artist %>
<p> <%= cl_image_tag comment.user.artist.photo, class: 'card-trip-user avatar-bordered' %><%= comment.user.artist.first_name %> <%= comment.user.artist.last_name %>, <%= link_to 'Artist Profile', artist_path(comment.user.artist) %> commented <%= time_ago_in_words(comment.created_at) %> ago: </p>
<p><%= comment.content %></p>
<p><%= time_ago_in_words(comment.created_at) %></p>
  </div>
</div>
<% else %>
<% end %>
<div class="card">
  <div class="card-body">
<p> <%= comment.user.username %> commented <%= time_ago_in_words(comment.created_at) %> ago:  </p>
<p>  <%= comment.content %> </p>
<p>  <%= comment.created_at %> </p>
  </div>
</div>


