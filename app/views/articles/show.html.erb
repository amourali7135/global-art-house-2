<div class="section">
  <div class="container">

      <div class="row align-items-center justify-content-center pt-4">
        <div class="row">
          <p><%= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %></p>
        </div>
      </div>

      <div class="row align-items-center justify-content-center">
        <div class="row">
          <h1><strong><%= @article.title %></strong></h1>
        </div>
      </div>

      <div class="row align-items-center justify-content-center">
        <div class="row">
          <h5>Written on <%= @article.created_at.strftime("%b %d, %Y") %> by <%= @article.artist.artist_name %> <%= cl_image_tag @article.artist.photo, class: "card-trip-user avatar-bordered" %> </h5>
        </div>
      </div>

    <div class="container article-social">
      <div class="row align-items-center justify-content-center">
        <div class="row">
          <p> Viewed <%= @article.hits %> times  </p>
        </div>
      </div>

      <div class="row align-items-center justify-content-center">
        <div class="row">
          <% @article.tag_list.each do |tag| %>
            <%= link_to tag, "/artists?utf8=âœ“&search%5Btag_list%5D%5B%5D=&search%5Btag_list%5D%5B%5D=#{tag}&search%5Bcountry%5D=&search%5Bcity%5D=&commit=Submit" %>
          <% end %>
        </div>
      </div>

      <div class="row align-items-center justify-content-center py-2">
        <div class="row">
          <%= link_to 'like', articles_likes_path(@article), class: 'btn btn-primary' %>
          <%= link_to 'unlike', articles_unlikes_path(@article), class: 'btn btn-primary' %>
        </div>
      </div>

      <div class="row align-items-center justify-content-center">
        <div class="row">
          <p><strong>Share: </strong><%= social_share_button_tag(@article.title,) %> </p>
          <br>
        </div>
      </div>

      <div class="row align-items-center justify-content-center">
        <div class="row">
          <p>Liked <%= @article.get_likes.size %> times! </p>
        </div>
      </div>

    </div>

      <div class="row align-items-center justify-content-center pt-3">
        <div class="row">
          <p><%= @article.body.html_safe.gsub(/"|\[|\]/, '') %></p>
        </div>
      </div>

     <div class="row align-items-center justify-content-center pb-4">
       <div class="row">
         <%= commontator_thread(@article) %>
       </div>
     </div>

  </div>
</div>
