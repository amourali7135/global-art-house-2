            <div class="container">
                <div class="row">
	                <div class="col-md-6 ml-auto mr-auto">
        	           <div class="profile">
	                        <div class="avatar">
	                             <%= cl_image_tag @artist.photo,
    width: 200, height: 150, crop: :fill, class: "img-raised rounded-circle img-fluid" %>
	                        </div>
	                        <div class="name">
                          <% if @artist.artist_name %>
	                            <h3 class="title"><%= @artist.first_name %> <%= @artist.last_name %>, also known as <%= @artist.artist_name %></h3>
                              <% else %>
                              <h3 class="title"><%= @artist.first_name %><%= @artist.last_name %></h3>
                              <% end %>
                <h6> <p><small>Tags: <%= raw @artist.tags.map(&:name).map { |t| link_to t, artists_path(t) }.join(', ') %></small></p></h6>
