<div class="card-trip">
<% if collaboration.photo.present? %>
  <%= cl_image_tag collaboration.photo, height: 300, width: 400, crop: :fill %>
<% else %>
  <%= image_tag "https://image.shutterstock.com/image-vector/ui-image-placeholder-wireframes-apps-260nw-1037719204.jpg" %>
  <%#= cl_image_tag @artist.photo, height: 300, width: 400, crop: :fill %>
<% end %>

  <div class="card-trip-infos">
    <h2><%= collaboration.title %></h2>
    <p><%= collaboration.description %></p>
    <p><%= collaboration.goal %></p>

    <% collaboration.tag_list.each do |tag| %>
      <%= link_to tag, "/artists?utf8=âœ“&search%5Btag_list%5D%5B%5D=&search%5Btag_list%5D%5B%5D=#{tag}&search%5Bcountry%5D=&search%5Bcity%5D=&commit=Submit" %>
    <% end %>

      <%= cl_image_tag collaboration.artist.photo, class: 'card-trip-user avatar-bordered' %>
      <p><%= flag_icon(collaboration.artist.country.to_sym.downcase) %> <%= collaboration.artist.city %></p>
    <div class="d-flex justify-content-between w-100">
      <%= link_to 'See this collaboration!', artist_collaboration_path(@artist, collaboration), class: 'btn btn-primary btn-sm', method: :get  %>
      <%= link_to 'Edit this collaboration!', edit_artist_collaboration_path(@artist, collaboration), class: 'btn btn-primary btn-sm'  %>
      <%= link_to 'Remove this collaboration!', artist_collaboration_path(@artist, collaboration), class: 'btn btn-primary btn-sm', method: :delete, data: {confirm: "Are you sure?  This cannot be undone."}  %>
    </div>
  </div>

  <div class="d-flex justify-content-between w-100">
    <h2 class="card-trip-pricing"><%= %></h2>
    <p><%=collaboration.get_likes.size %> likes! </p>
    <p> Viewed <%= collaboration.hits %> times </p>
  </div>
</div>


