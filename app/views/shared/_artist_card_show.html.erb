<div class="card mb-3 col-sm-6 card align-items-center", id="artist-card-show">
  <%= cl_image_tag @artist.photo,
    width: 300, height: 225, crop: :scale, class: "img-raised rounded-circle img-fluid pt-2" %>
  <div class="card-body">
  <% if @artist.artist_name %>
	  <h3 class="title row align-items-center justify-content-center"><%= @artist.first_name %> <%= @artist.last_name %>, also known as <%= @artist.artist_name %></h3>
  <% else %>
    <h3 class="title"><%= @artist.first_name %><%= @artist.last_name %></h3>
   <% end %>
    <p class="card-text row align-items-center justify-content-center"><%= @artist.bio %></p>
    <p class="card-text row align-items-center justify-content-center"><small class="text-muted"><%=  %></small></p>


    <div class="d-flex justify-content-center" >
    <p class="card-text row align-items-center justify-content-center align-items-center" >
    <%= link_to_image('FB.svg', "https://www.facebook.com/#{@artist.facebook}", class: "logos")%>
    <%= link_to_image('instagram.svg', "https://www.instagram.com/#{@artist.instagram}", class: "logos")%>
    </div>


    <p class="card-text row align-items-center justify-content-center"><%= @artist.age %> Years old</p>
    <p class="card-text row align-items-center justify-content-center"><%= @artist.city %>, <%= @artist.country %> <%= flag_icon(@artist.country.to_sym.downcase) %></p>
    <p class="card-text row align-items-center justify-content-center">Originally from <%= @artist.birth_place %></p>
    <p class="card-text row align-items-center justify-content-center"><small>Tags: <%= raw @artist.tags.map(&:name).map { |t| link_to t, "/artists/?utf8=âœ“&search%5Btag_ids%5D%5B%5D=&search%5Btag_ids%5D%5B%5D=#{t}&search%5Bcountry%5D=&search%5Bcity%5D=&commit=Submit" }.join(', ') %></small></p>
  </div>

<div class="d-flex justify-content-between w-100">
<p>Has <%=@artist.get_likes.size %> likes! </p>
<p>Followers: <%= @artist.followers_count %></p>
<p> Viewed <%= @artist.hits %> times </p>
</div>
</div>

