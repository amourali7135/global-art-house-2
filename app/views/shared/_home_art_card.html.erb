<div class="card-trip">
  <% art.photos.each do |photo| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(photo.photo, width: 150, height: 120, crop: :fill) %>)">
    </div>
  <% end %>

  <div class="card-trip-infos">
    <h2><%= art.title %></h2>
    <p><%= art.description %></p>
    <p><%= art.inspiration %></p>
    <p>Available to buy? <%= art.available %></p>
    <p><small>Tags: <%= raw art.tags.map(&:name).map { |t| link_to t, "browse?utf8=âœ“&search%5Btag_ids%5D%5B%5D=&search%5Btag_ids%5D%5B%5D=&search%5Btag_ids%5D%5B%5D=Realist&search%5Bcountry%5D=&search%5Bcity%5D=&commit=Submit" }.join(', ') %></small></p>
      <%= cl_image_tag art.artist.photo, class: 'card-trip-user avatar-bordered' %>
      <p><%= flag_icon(art.artist.country.to_sym.downcase) %> <%= art.artist.city %></p>
      <%= link_to 'See this art!', artist_art_path(art.artist, art), method: :get  %>
  </div>

  <div class="d-flex justify-content-between w-100">
    <h2 class="card-trip-pricing">$<%= art.price_cents %></h2>
    <p><%=art.get_likes.size %> likes! </p>
      <p> Viewed <%= art.hits %> times </p>
  </div>
</div>

