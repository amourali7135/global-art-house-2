<div id="article-card-css">
  <div class="example-2 card">
    <div class="wrapper" style="background: url('<%= cl_image_path article.photo, height: 400, width: 350, crop: :fill %>')">
      <div class="header">
        <div class="date">
          <span class="day">12</span>
          <span class="month">Aug</span>
          <span class="year">2016</span>
        </div>
        <ul class="menu-content">
          <li>
            <a href="#" class="fa fa-bookmark-o"></a>
          </li>
          <li><a href="#" class="fa fa-heart-o"><span>18</span></a></li>
          <li><a href="#" class="fa fa-comment-o"><span>3</span></a></li>
        </ul>
      </div>
      <div class="data">
        <div class="content">
          <span class="author"><%= article.artist.artist_name %></span>
          <h1 class="title"><a href=<%= artist_article_path(@artist.id, article) %>><%= article.title %></a></h1>
          <p class="text"><%= truncate( article.body.html_safe, length: 50) %></p>
          <a href=<%= artist_article_path(@artist.id, article) %> class="button">Read more</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Delete this article!', artist_article_path(@artist, article), class: 'btn btn-primary btn-sm', method: :delete, data: {confirm: "Are you sure?  This cannot be undone."}  %>
<%= link_to 'Edit this article!', edit_artist_article_path(@artist, article), class: 'btn btn-primary btn-sm', method: :delete, data: {confirm: "Are you sure?  This cannot be undone."}  %>
<%= link_to 'View this article!', artist_article_path(@artist, article), class: 'btn btn-primary btn-sm', method: :get %>

